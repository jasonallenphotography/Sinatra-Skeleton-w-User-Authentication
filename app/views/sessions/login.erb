<div>
  <form action='/login' method='POST'>
    <table>
    <tr>
      <td>Email:</td>
      <td><input type='email' name='email' placeholder="Enter your Email" pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+.[a-z]{2,4}$" required></td>
    </tr>
    <tr>
      <td>Password:</td>
      <td><input type='password' name='password' placeholder="Enter your Password" pattern=".{4,}" required></td>
    </tr>
    <tr>
      <td><input type='submit' value='Login!'></td>
    </tr>
    </table>
  </form>
</div>
