<table>
  <form action='/users/<%=@user.id%>' method='post'>
    <input type='hidden' name='_method' value='put'/>
      <tr>
        <td>Full name:</td>
        <td><input type='text' name='user[full_name]' value="<%=@user.name%>"></td>
      </tr>
      <tr>
        <td>Email address:</td>
        <td><input type='text' name='user[email]' value="<%=@user.email%>"></td>
      </tr>
      <tr>
        <td><input type='submit' value='Update'></td><td></td>
      </tr>
    </form>
    <form action='/users/<%=@user.id%>' method='post'>
    <input type='hidden' name='_method' value='delete'/>
      <tr>
        <td><input type='submit' value='Delete'></td><td></td>
      </tr>
    </form>
  </table>

